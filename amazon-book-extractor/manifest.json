{
  "manifest_version": 3,
  "name": "Amazon Book Info Extractor",
  "version": "1.0",
  "description": "Extract book information from Amazon product pages",
  "permissions": ["activeTab", "storage", "scripting", "downloads"],
  "host_permissions": ["*://*.amazon.com/*", "*://*.amazon.cn/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icons8-books-3d-fluency-16.png",
      "32": "images/icons8-books-3d-fluency-32.png",
      "96": "images/icons8-books-3d-fluency-96.png"
    }
  },
  "icons": {
    "16": "images/icons8-books-3d-fluency-16.png",
    "32": "images/icons8-books-3d-fluency-32.png",
    "96": "images/icons8-books-3d-fluency-96.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*/dp/*", 
        "*://*.amazon.com/dp/*", 
        "*://*.amazon.com/*/gp/product/*",
        "*://*.amazon.cn/*/dp/*", 
        "*://*.amazon.cn/dp/*", 
        "*://*.amazon.cn/*/gp/product/*"
      ],
      "js": ["js/content.js"]
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  }
}
